# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[Makefile]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 2

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
